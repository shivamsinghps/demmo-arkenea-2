{% from '@Public/macro/fields.html.twig' import form_input, form_login_registration_input %}

{% set donorForm = get_donor_registration_form() %}

{{ form_start(donorForm, {'action': url(constant('FMT\\PublicBundle\\Controller\\Common\\RegistrationController::ROUTE_DONOR_REGISTER'))}) }}
{{ form_input(donorForm.profile.firstName) }}
{{ form_input(donorForm.profile.lastName) }}
{{ form_login_registration_input(donorForm.login) }}
<div class="text-center">
    <button type="submit" class="btn btn-primary">{{ 'fmt.form.submit'|trans|upper }}</button>
</div>
{{ form_end(donorForm) }}
